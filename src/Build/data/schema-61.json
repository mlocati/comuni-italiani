{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/mlocati/comuni-italiani/61",
    "title": "Schema of data fetched from situas.istat.it/ (Municipalities)",
    "type": "object",
    "properties": {
        "totalRows": {
            "type": "integer",
            "minimum": 0
        },
        "colNames": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "string"
            }
        },
        "label": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "string"
            }
        },
        "formatMasks": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "string"
            }
        },
        "types": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "string"
            }
        },
        "body": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "properties": {
                    "COD_RIP": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "DEN_RIP": {
                        "type": "string",
                        "minLength": 1
                    },
                    "COD_REG": {
                        "type": ["string", "integer"],
                        "pattern": "^[0-9]{2}$",
                        "minimum": 1,
                        "maximum": 99
                    },
                    "DEN_REG": {
                        "type": "string",
                        "minLength": 1
                    },
                    "COD_UTS": {
                        "type": ["integer", "string"],
                        "minimum": 1,
                        "maximum": 999,
                        "pattern": "^[0-9]{3}$"
                    },
                    "DEN_UTS": {
                        "type": "string",
                        "minLength": 1
                    },
                    "COD_PROV_STORICO": {
                        "type": ["string", "integer"],
                        "pattern": "^[0-9]{3}$",
                        "minimum": 1,
                        "maximum": 999
                    },
                    "TIPO_UTS": {
                        "type": "integer",
                        "enum": [1, 2, 3, 4, 5]
                    },
                    "SIGLA_AUTOMOBILISTICA": {
                        "type": "string",
                        "pattern": "^[A-Z]{2}$"
                    },
                    "PRO_COM_T": {
                        "type": ["string", "integer"],
                        "pattern": "^[0-9]{6}$",
                        "minimum": 1,
                        "maximum": 999999
                    },
                    "PRO_COM": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "COMUNE": {
                        "type": "string",
                        "minLength": 1
                    },
                    "COMUNE_IT": {
                        "type": "string",
                        "minLength": 1
                    },
                    "COMUNE_A": {
                        "type": ["string", "null"]
                    },
                    "CC_REG": {
                        "type": "integer",
                        "enum": [0, 1]
                    },
                    "CC_UTS": {
                        "type": "integer",
                        "enum": [0, 1]
                    },
                    "COD_CATASTO": {
                        "type": "string",
                        "pattern": "^[A-Z][0-9]{3}$"
                    },
                    "COD_COM_FISCALE": {
                        "type": ["integer", "string", "null"],
                        "pattern": "^0?[0-9]{11}$",
                        "minimum": 1,
                        "maximum": 99999999999
                    },
                    "COM_NUTS1_2024": {
                        "type": "string",
                        "pattern": "^IT[A-Z]$"
                    },
                    "COM_NUTS2_2024": {
                        "type": "string",
                        "pattern": "^IT[A-Z][0-9]$"
                    },
                    "COM_NUTS3_2024": {
                        "type": "string",
                        "pattern": "^IT[A-Z][0-9][A-Z0-9]$"
                    }
                },
                "required": [
                    "COD_RIP",
                    "COD_REG",
                    "COD_PROV_STORICO",
                    "COD_UTS",
                    "PRO_COM_T",
                    "PRO_COM",
                    "COMUNE",
                    "COMUNE_IT",
                    "COMUNE_A",
                    "DEN_RIP",
                    "DEN_REG",
                    "DEN_UTS",
                    "TIPO_UTS",
                    "CC_REG",
                    "CC_UTS",
                    "SIGLA_AUTOMOBILISTICA",
                    "COD_CATASTO",
                    "COD_COM_FISCALE",
                    "COM_NUTS1_2024",
                    "COM_NUTS2_2024",
                    "COM_NUTS3_2024"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "totalRows",
        "colNames",
        "label",
        "formatMasks",
        "types",
        "body"
    ],
    "additionalProperties": false
}
